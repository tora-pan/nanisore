{
  "extends": [
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "order/properties-alphabetical-order": true
  },
  "overrides": [
    {
      "files": [
        "**/*.ts",
        "**/**/*.ts"
      ],
      "customSyntax": "@stylelint/postcss-css-in-js"
    }
  ]
}
